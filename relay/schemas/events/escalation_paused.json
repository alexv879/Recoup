{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://recoup.app/schemas/events/escalation_paused.json",
    "title": "Escalation Paused Event",
    "description": "Fired when collections automation is paused for an invoice (e.g., payment claim filed, manual pause, dispute)",
    "type": "object",
    "required": [
        "invoice_id",
        "invoice_reference",
        "reason",
        "freelancer_id"
    ],
    "properties": {
        "invoice_id": {
            "type": "string",
            "description": "Unique identifier of the invoice"
        },
        "invoice_reference": {
            "type": "string",
            "description": "Human-readable invoice reference (e.g., INV-20250115-00001)"
        },
        "reason": {
            "type": "string",
            "enum": [
                "payment_claim",
                "manual",
                "dispute"
            ],
            "description": "Reason for pausing collections"
        },
        "pause_until": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp for auto-resume (null if indefinite)"
        },
        "freelancer_id": {
            "type": "string",
            "description": "Clerk user ID of the freelancer"
        }
    },
    "additionalProperties": false
}