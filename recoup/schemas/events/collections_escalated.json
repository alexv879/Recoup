{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "collections_escalated",
    "type": "object",
    "required": [
        "invoice_id",
        "previous_level",
        "new_level",
        "days_overdue"
    ],
    "properties": {
        "invoice_id": {
            "type": "string"
        },
        "previous_level": {
            "type": "string",
            "enum": [
                "pending",
                "gentle",
                "firm",
                "final"
            ]
        },
        "new_level": {
            "type": "string",
            "enum": [
                "gentle",
                "firm",
                "final",
                "agency"
            ]
        },
        "days_overdue": {
            "type": "integer",
            "minimum": 0
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        }
    },
    "additionalProperties": false
}