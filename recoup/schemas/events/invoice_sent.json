{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "invoice_sent",
    "type": "object",
    "required": [
        "invoice_id",
        "send_method"
    ],
    "properties": {
        "invoice_id": {
            "type": "string"
        },
        "send_method": {
            "type": "string",
            "enum": [
                "email",
                "link",
                "pdf"
            ]
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        }
    },
    "additionalProperties": false
}